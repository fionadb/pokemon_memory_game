{
  "name": "pokemon-memory-game",
  "version": "1.0.0",
  "description": "A Pokemon memory game built with AngularJS and TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "http-server dist -p 3000",
    "build": "tsc && xcopy src\\assets dist\\assets /E /I /Y && xcopy src\\styles dist\\styles /E /I /Y && copy src\\index.html dist\\",
    "dev": "tsc --watch",
    "test": "jest",
    "test:smoke": "jest --testNamePattern=\"smoke\"",
    "test:regression": "jest --testNamePattern=\"regression\"",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "angular": "^1.8.3",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/angular": "^1.8.9",
    "@types/jest": "^29.5.14",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.js",
      "<rootDir>/tests/integration/**/*.test.js"
    ]
  },
  "keywords": [
    "pokemon",
    "memory-game",
    "angularjs",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
